{
  "kind": "singleType",
  "collectionName": "spb_pages",
  "info": {
    "singularName": "spb-page",
    "pluralName": "spb-pages",
    "displayName": "СПБ Страница",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "mainBtnText": {
      "type": "string",
      "required": true
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "components.preimushhestvo-2",
      "required": true,
      "max": 8,
      "min": 3
    },
    "processingMethods": {
      "type": "component",
      "repeatable": false,
      "component": "components.repetitive-with-title",
      "required": true
    },
    "infoAndDocsTitle": {
      "type": "string",
      "required": true
    },
    "infoAndDocs": {
      "type": "dynamiczone",
      "components": [
        "unit.dokumentami",
        "unit.tekstom",
        "unit.spojlery"
      ],
      "required": true,
      "min": 2,
      "max": 5
    },
    "recommended_products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::recommended-product.recommended-product"
    },
    "banner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::banner.banner"
    },
    "description": {
      "type": "customField",
      "options": {
        "preset": "toolbar"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "ФЛ",
        "ЮЛ",
        "ОБЩ"
      ]
    }
  }
}
